<!DOCTYPE html>

<html lang="en">


<% include head %>


    <body>
        <div class="wrapper">
            <header class="header">
                <h2>Todo List</h2>

                <div class="content">
                    <p class="userName">
                        <%= user %>
                    </p>
                    <a class="logStatus" href=" <%= link %>">
                        <%= status %>
                    </a>

                </div>

            </header>
            <section class="main">
                <div class="display">
                    <ul class="list">
                        <% todos.forEach(function(todo) {%>
                            <li class="list--item">
                                <p>
                                    <%= todo.id %>
                                </p>
                                <p>
                                    <form class="inner" id="formUpdate" method="POST" action="/task/update/<%= todo.id %>">
                                        <input class="item--inner" name="display" disabled="disabled" value="<%= todo.title %>"placeholder="<%= todo.title %>" />
                                    </form>
                                </p>
                                <div class="btns">
                                    <button class="btnUpdate" data-id="<%= todo.id %>" data-num="" type="button" >
                                        修改 </button>
                                    <button class="btnDelete" data-id="<%= todo.id %>" data-num="" type="button" >
                                        刪除</button>
                                </div>
                            </li>
                            <% }); %>
                    </ul>
                </div>
                <div class="form">
                    <form class="inner" id="form" method="POST" action="/task">
                        <input class="input" name="title" placeholder="待辦事項" />
                        <input class="btn action" type="submit" value="+">
                    </form>
                </div>

            </section>

            <footer>
            </footer>

        </div>
        <script src="/public/js/main.js"></script>
    </body>